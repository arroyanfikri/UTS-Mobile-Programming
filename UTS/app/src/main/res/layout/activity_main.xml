<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/psissemarang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nnitosans_black"
        android:text="PSIS SEMARANG OFFICIAL"
        android:textSize="40dp"
        android:textColor="#fff2f2f2"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img1"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nunitosans_regular"
        android:hint="Email"
        android:background="@drawable/login_edit_background"
        android:backgroundTint="#fff2f2f2"
        android:padding="20dp"
        android:textColor="#ff2e2e2c"
        android:textColorHint="#ff2e2e2c"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edt_password"
        />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:background="@drawable/login_edit_background"
        android:backgroundTint="#fff2f2f2"
        android:padding="20dp"
        android:fontFamily="@font/nunitosans_regular"
        android:inputType="textPassword"
        android:textColor="#ff2e2e2c"
        android:textColorHint="#ff2e2e2c"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        app:layout_constraintEnd_toEndOf="@id/edt_password"
        android:text="Lupa Password"
        android:textColor="#fff2f2f2"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Login"
        android:textSize="20dp"
        android:background="@drawable/login_edit_background"
        android:backgroundTint="#ff18457e"
        android:textColor="#ff2e2e2c"
        android:textAllCaps="false"
        android:fontFamily="@font/nunitosans_bold"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        app:layout_constraintStart_toStartOf="@id/edt_password"
        app:layout_constraintEnd_toEndOf="@id/edt_password"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>